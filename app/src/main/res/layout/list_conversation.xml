<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:id="@+id/container_card_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:background="@drawable/background_item_conversation"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        >
        <TextView
            android:id="@+id/title_conversation"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="@string/title_conversation"
            android:layout_marginStart="31dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="@string/last_message"
            android:layout_below="@id/title_conversation"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="31dp"
            android:layout_marginTop="6dp"
            />
    </RelativeLayout>
