<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenConversation"
    android:id="@+id/message_container">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_title_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary"
        android:minHeight="47dp"
        android:elevation="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        >
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/container_title_message"
            app:layout_constraintBottom_toBottomOf="@id/container_title_message"
            android:id="@+id/back_button"
            android:src="@drawable/ic_back_button"
            android:clickable="true"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/title_conversatione"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/container_title_message"
            app:layout_constraintTop_toTopOf="@id/container_title_message"
            app:layout_constraintBottom_toBottomOf="@id/container_title_message"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="@string/title_conversation"
            android:layout_marginRight="23dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:id="@+id/list_messages"
        android:elevation="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_title_message"
        app:layout_constraintBottom_toTopOf="@id/container_write_message"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintVertical_bias="0"
        android:scrollbars="vertical" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_write_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/primary"
        android:minHeight="97dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        >
        <EditText
            android:id="@+id/inputSubject"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="248dp"
            android:padding="8dp"
            android:layout_marginLeft="20dp"
            android:elevation="8dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/placeholder_text_conversation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            />
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/send_message_button"
            android:src="@drawable/ic_send_button"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>